---
import Layout from '@/layouts/Layout.astro';
import Header from '@/components/Header.astro';
import Footer from '@/components/Footer.astro';
---

<Layout title="Industries">
  <Header />
  
  <main>
    <section class="py-20 bg-gray-50">
      <div class="container mx-auto px-4">
        <h1 class="text-4xl font-bold text-center mb-4">Industries We Serve</h1>
        <p class="text-xl text-gray-600 text-center max-w-2xl mx-auto">
          Engage is built specifically for law firms of all sizes and practice areas.
        </p>
      </div>
    </section>
    
    <section class="py-20">
      <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto text-center">
          <p class="text-gray-600">Industry-specific content coming soon.</p>
        </div>
      </div>
    </section>
  </main>
  
  <Footer />
</Layout>