---
import Layout from '@/layouts/Layout.astro';
import HeaderLexara from '@/components/HeaderLexara.astro';
import Footer from '@/components/Footer.astro';
import Button from '@/components/ui/Button.astro';
import Container from '@/components/ui/Container.astro';
import Section from '@/components/ui/Section.astro';
import Badge from '@/components/ui/Badge.astro';
---

<Layout title="Integrations - Engage by Lexara">
  <HeaderLexara />
  
  <main>
    <Section background="white" padding="xlarge">
      <Container size="medium">
        <div class="text-center">
          <h1 class="text-4xl md:text-5xl font-semibold text-lexara-dark-navy mb-6">
            Seamless Integrations
          </h1>
          <p class="text-xl text-gray-600 max-w-2xl mx-auto mb-8">
            Connect Engage with your existing legal technology stack for a unified workflow.
          </p>
          <Badge variant="info">Coming Soon</Badge>
        </div>
      </Container>
    </Section>
    
    <Section background="smoke" padding="xlarge">
      <Container size="large">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-16">
          <div class="bg-white rounded-2xl p-8 text-center">
            <div class="w-16 h-16 bg-lexara-dark-navy rounded-lg mx-auto mb-4 flex items-center justify-center">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 3v2m6-2v2M9 19v2m6-2v2M5 9H3m2 6H3m18-6h-2m2 6h-2M7 19h10a2 2 0 002-2V7a2 2 0 00-2-2H7a2 2 0 00-2 2v10a2 2 0 002 2zM9 9h6v6H9V9z" />
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-lexara-dark-navy mb-2">Practice Management</h3>
            <p class="text-gray-600">Sync client data with Clio, MyCase, PracticePanther, and more.</p>
          </div>
          
          <div class="bg-white rounded-2xl p-8 text-center">
            <div class="w-16 h-16 bg-lexara-dark-navy rounded-lg mx-auto mb-4 flex items-center justify-center">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-lexara-dark-navy mb-2">CRM Systems</h3>
            <p class="text-gray-600">Connect with Salesforce, HubSpot, and legal-specific CRMs.</p>
          </div>
          
          <div class="bg-white rounded-2xl p-8 text-center">
            <div class="w-16 h-16 bg-lexara-dark-navy rounded-lg mx-auto mb-4 flex items-center justify-center">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-lexara-dark-navy mb-2">Communication</h3>
            <p class="text-gray-600">Integrate with email, calendar, and messaging platforms.</p>
          </div>
        </div>
        
        <div class="text-center">
          <p class="text-gray-600 mb-8">
            Professional and Enterprise plans include full API access for custom integrations.
          </p>
          <Button 
            href="/pricing"
            variant="primary"
            size="large"
          >
            View Pricing Plans
          </Button>
        </div>
      </Container>
    </Section>
  </main>
  
  <Footer />
</Layout>