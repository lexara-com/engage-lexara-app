---
import Layout from '@/layouts/Layout.astro';
import HeaderLexara from '@/components/HeaderLexara.astro';
import Footer from '@/components/Footer.astro';

const features = [
  {
    icon: 'chart',
    title: 'Analytics & Reporting',
    description: 'Track conversation metrics, conversion rates, and client acquisition insights with detailed analytics.'
  },
  {
    icon: 'tag',
    title: 'White-Label Branding',
    description: 'Customize the interface with your firm\'s branding, colors, and messaging for a seamless client experience.'
  },
  {
    icon: 'support',
    title: '24/7 Support',
    description: 'Expert support team available around the clock to help with setup, training, and ongoing assistance.'
  },
  {
    icon: 'mobile',
    title: 'Mobile Responsive',
    description: 'Perfect experience across all devices - desktop, tablet, and mobile for clients on-the-go.'
  },
  {
    icon: 'security',
    title: 'Enterprise Security',
    description: 'Secure End-to-End Encryption, HIPAA compliant'
  },
  {
    icon: 'api',
    title: 'API & Integrations',
    description: 'Seamlessly integrate with your existing practice management software, CRM, and other legal tech tools.'
  }
];
---

<Layout title="Features">
  <HeaderLexara />
  
  <main>
    <!-- Hero Section -->
    <section class="py-16 bg-gray-50">
      <div class="container mx-auto px-4">
        <div class="max-w-4xl">
          <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6">
            Powerful Features for<br />Modern Law Firms
          </h1>
          <p class="text-lg text-gray-600 mb-8">
            <span class="font-semibold italic">Engage</span> combines advanced AI with legal expertise to deliver the most comprehensive client intake solution for law firms.
          </p>
          <div class="flex flex-wrap gap-4">
            <a 
              href={`${import.meta.env.PUBLIC_CONSOLE_URL}/signup?utm_source=engage&utm_campaign=features_hero`}
              class="px-6 py-3 bg-red-900 text-white font-medium rounded hover:bg-red-800 transition-colors"
            >
              Start Free Trial
            </a>
            <a 
              href="/demo"
              class="px-6 py-3 bg-white text-gray-900 font-medium rounded border border-gray-300 hover:bg-gray-50 transition-colors"
            >
              Watch Demo
            </a>
          </div>
          
          <div class="flex flex-wrap items-center gap-6 mt-8 text-sm text-gray-600">
            <div class="flex items-center gap-2">
              <div class="w-2 h-2 bg-green-500 rounded-full"></div>
              <span>Customized to your practice Areas</span>
            </div>
            <div class="flex items-center gap-2">
              <div class="w-2 h-2 bg-green-500 rounded-full"></div>
              <span>Responsive, Adaptable Agents</span>
            </div>
            <div class="flex items-center gap-2">
              <div class="w-2 h-2 bg-green-500 rounded-full"></div>
              <span>Fast Set up</span>
            </div>
          </div>
        </div>
        
        <!-- Chat Preview -->
        <div class="absolute right-0 top-16 hidden lg:block">
          <div class="bg-white rounded-xl shadow-2xl p-6 max-w-md">
            <img src="/images/engage-chat-sample-detail.png" alt="Engage Chat Interface" class="w-full" />
          </div>
        </div>
      </div>
    </section>

    <!-- Everything You Need Section -->
    <section class="py-20 bg-white">
      <div class="container mx-auto px-4">
        <h2 class="text-3xl font-bold text-center mb-4">Everything You Need for Client Intake</h2>
        <p class="text-center text-gray-600 mb-12 max-w-2xl mx-auto">
          Comprehensive features designed specifically for legal professionals
        </p>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          {features.map((feature) => (
            <div class="bg-gray-50 rounded-lg p-6">
              <div class="w-12 h-12 bg-lexara-dark-navy rounded-lg flex items-center justify-center mb-4">
                {feature.icon === 'chart' && (
                  <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
                  </svg>
                )}
                {feature.icon === 'tag' && (
                  <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z" />
                  </svg>
                )}
                {feature.icon === 'support' && (
                  <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192l-3.536 3.536M21 12a9 9 0 11-18 0 9 9 0 0118 0zm-5 0a4 4 0 11-8 0 4 4 0 018 0z" />
                  </svg>
                )}
                {feature.icon === 'mobile' && (
                  <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z" />
                  </svg>
                )}
                {feature.icon === 'security' && (
                  <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
                  </svg>
                )}
                {feature.icon === 'api' && (
                  <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4" />
                  </svg>
                )}
              </div>
              <h3 class="text-lg font-semibold text-gray-900 mb-2">{feature.title}</h3>
              <p class="text-sm text-gray-600">{feature.description}</p>
              {feature.title === 'API & Integrations' && (
                <button class="mt-4 text-sm text-blue-600 hover:text-blue-700 font-medium">
                  Coming Soon
                </button>
              )}
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Advanced AI Section -->
    <section class="py-20 bg-gray-50">
      <div class="container mx-auto px-4">
        <div class="flex items-center gap-2 mb-8">
          <div class="w-8 h-8 bg-lexara-dark-navy rounded flex items-center justify-center">
            <span class="text-white text-xs font-bold">AI</span>
          </div>
          <span class="text-sm text-gray-600">Advanced AI</span>
        </div>
        
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-start">
          <div>
            <h2 class="text-3xl font-bold text-gray-900 mb-6">Intelligent documental analysis</h2>
            <p class="text-gray-600 mb-6">
              Our AI analyzes contracts, identifies risks and suggests strategic improvements. Reduce review time by up to 70% maintaining precision.
            </p>
            <ul class="space-y-3 text-gray-700">
              <li class="flex items-start gap-2">
                <span class="text-gray-400">•</span>
                <span>Automatic detection of cryptical clauses</span>
              </li>
              <li class="flex items-start gap-2">
                <span class="text-gray-400">•</span>
                <span>Real-time risk analysis</span>
              </li>
              <li class="flex items-start gap-2">
                <span class="text-gray-400">•</span>
                <span>Aumatic improvement suggestions</span>
              </li>
            </ul>
            
            <!-- Conflict Check Result -->
            <div class="mt-8 bg-white rounded-lg shadow-sm p-6">
              <h3 class="font-semibold text-gray-900 mb-4">Conflict Check Result</h3>
              <div class="space-y-3">
                <div class="flex items-center justify-between p-3 bg-green-50 rounded-lg">
                  <span class="text-sm">John Smith</span>
                  <span class="text-xs text-green-600 font-medium">Clear</span>
                </div>
                <div class="flex items-center justify-between p-3 bg-yellow-50 rounded-lg">
                  <span class="text-sm">ABC Corporation</span>
                  <span class="text-xs text-yellow-600 font-medium">Review</span>
                </div>
                <div class="flex items-center justify-between p-3 bg-red-50 rounded-lg">
                  <span class="text-sm">Former Client Match</span>
                  <span class="text-xs text-red-600 font-medium">Conflict</span>
                </div>
              </div>
            </div>
          </div>
          
          <div>
            <div class="bg-white rounded-lg shadow-sm p-6">
              <h3 class="text-lg font-semibold mb-4">Contract Analysis</h3>
              <div class="space-y-4">
                <div>
                  <div class="flex justify-between items-center mb-2">
                    <span class="text-sm text-gray-600">Identified Risks:</span>
                    <span class="text-2xl font-bold text-red-600">3</span>
                  </div>
                  <div class="flex justify-between items-center mb-2">
                    <span class="text-sm text-gray-600">Reviewed Clauses:</span>
                    <span class="text-2xl font-bold">24</span>
                  </div>
                  <div class="flex justify-between items-center">
                    <span class="text-sm text-gray-600">Time Saved:</span>
                    <span class="text-lg font-semibold text-green-600">4.5 hours</span>
                  </div>
                </div>
                <button class="w-full mt-4 px-4 py-2 bg-green-500 text-white rounded-lg hover:bg-green-600 transition-colors">
                  Complete
                </button>
              </div>
            </div>
            
            <div class="mt-6 bg-lexara-dark-navy text-white rounded-lg p-6">
              <div class="flex items-center gap-2 mb-4">
                <div class="w-6 h-6 bg-white rounded flex items-center justify-center">
                  <span class="text-gray-900 text-xs">✓</span>
                </div>
                <span class="text-sm">Compliance</span>
              </div>
              <h3 class="text-xl font-semibold mb-3">Automatic Conflict Detection</h3>
              <p class="text-sm text-gray-300 mb-4">
                Always keep updated with regula tory changes. Lexara monitors real-time regulations and alerts you about changes that affect your business.
              </p>
              <ul class="space-y-2 text-sm text-gray-300">
                <li class="flex items-start gap-2">
                  <span>•</span>
                  <span>Automatic regulatory change alerts</span>
                </li>
                <li class="flex items-start gap-2">
                  <span>•</span>
                  <span>Real-time compliance dashboard</span>
                </li>
                <li class="flex items-start gap-2">
                  <span>•</span>
                  <span>Automated audit reports</span>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Testimonials Section -->
    <section class="py-20 bg-white">
      <div class="container mx-auto px-4">
        <h2 class="text-3xl font-bold text-center mb-4">What our clients say</h2>
        <p class="text-center text-gray-600 mb-12">
          More than 500 legal teams trust Lexara to transform their processes
        </p>
        
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-5xl mx-auto">
          <div class="bg-gray-50 rounded-lg p-6">
            <div class="flex mb-4">
              {[1,2,3,4,5].map(() => (
                <svg class="w-4 h-4 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                </svg>
              ))}
            </div>
            <p class="text-sm text-gray-600 mb-4">
              Lexara transformó completamente nuestro departamento legal. Redujimos el tiempo de revisión de contratos en un 65%.
            </p>
            <div class="flex items-center gap-3">
              <div class="w-10 h-10 bg-gray-300 rounded-full"></div>
              <div>
                <p class="font-semibold text-sm">Jhon Doe</p>
                <p class="text-xs text-gray-500">Legal Director</p>
              </div>
            </div>
          </div>
          
          <div class="bg-gray-50 rounded-lg p-6">
            <div class="flex mb-4">
              {[1,2,3,4,5].map(() => (
                <svg class="w-4 h-4 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                </svg>
              ))}
            </div>
            <p class="text-sm text-gray-600 mb-4">
              La automatización de procesos nos permitió enfocar nuestro tiempo en estrategia en lugar de tareas operativas.
            </p>
            <div class="flex items-center gap-3">
              <div class="w-10 h-10 bg-gray-300 rounded-full"></div>
              <div>
                <p class="font-semibold text-sm">Johana Doe</p>
                <p class="text-xs text-gray-500">Senior Partner</p>
              </div>
            </div>
          </div>
          
          <div class="bg-gray-50 rounded-lg p-6">
            <div class="flex mb-4">
              {[1,2,3,4].map(() => (
                <svg class="w-4 h-4 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                </svg>
              ))}
              <svg class="w-4 h-4 text-gray-300" fill="currentColor" viewBox="0 0 20 20">
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
              </svg>
            </div>
            <p class="text-sm text-gray-600 mb-4">
              Implementación rápida y resultados inmediatos. El ROI fue evidente desde el primer mes.
            </p>
            <div class="flex items-center gap-3">
              <div class="w-10 h-10 bg-gray-300 rounded-full"></div>
              <div>
                <p class="font-semibold text-sm">Jhon Doe</p>
                <p class="text-xs text-gray-500">Managing Partner</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="py-20 bg-gradient-to-br from-gray-900 to-blue-900 text-white">
      <div class="container mx-auto px-4 text-center">
        <h2 class="text-3xl md:text-4xl font-bold mb-4">
          Experience the Power of AI-Driven Client Intake
        </h2>
        <p class="text-xl text-gray-300 mb-8 max-w-2xl mx-auto">
          Lorem ipsum dolor sit amet consectetur adipiscing elit. Ut venenatis purus in consequat viverra.
        </p>
        <div class="flex flex-wrap gap-4 justify-center">
          <a 
            href={`${import.meta.env.PUBLIC_CONSOLE_URL}/signup?utm_source=engage&utm_campaign=features_cta`}
            class="px-6 py-3 bg-white text-gray-900 font-medium rounded hover:bg-gray-100 transition-colors"
          >
            Start Free Trial
          </a>
          <a 
            href="/demo"
            class="px-6 py-3 bg-transparent text-white font-medium rounded border border-white hover:bg-white hover:text-gray-900 transition-colors"
          >
            Watch Demo
          </a>
        </div>
        
        <div class="flex justify-center items-center gap-8 mt-12 text-sm">
          <div class="flex items-center gap-2">
            <div class="w-2 h-2 bg-white rounded-full"></div>
            <span>Customized to your practice Areas</span>
          </div>
          <div class="flex items-center gap-2">
            <div class="w-2 h-2 bg-white rounded-full"></div>
            <span>Responsive, Adaptable Agents</span>
          </div>
          <div class="flex items-center gap-2">
            <div class="w-2 h-2 bg-white rounded-full"></div>
            <span>Fast Set up</span>
          </div>
        </div>
      </div>
