---
import Badge from './ui/Badge.astro';

const features = [
  {
    icon: 'chart',
    title: 'Analytics & Reporting',
    description: 'Track conversation metrics, conversion rates, and client acquisition insights with detailed analytics.'
  },
  {
    icon: 'tag',
    title: 'White-Label Branding',
    description: 'Customize the interface with your firm\'s branding, colors, and messaging for a seamless client experience.'
  },
  {
    icon: 'support',
    title: '24/7 Support',
    description: 'Expert support team available around the clock to help with setup, training, and ongoing assistance.'
  },
  {
    icon: 'mobile',
    title: 'Mobile Responsive',
    description: 'Perfect experience across all devices - desktop, tablet, and mobile for clients on-the-go.'
  },
  {
    icon: 'security',
    title: 'Enterprise Security',
    description: 'Secure End-to-End Encryption, HIPPA compliant'
  },
  {
    icon: 'api',
    title: 'API & Integrations',
    description: 'Seamlessly integrate with your existing practice management software, CRM, and other legal tech tools.',
    comingSoon: true
  }
];
---

<section class="py-20 bg-white">
  <div class="container mx-auto px-4">
    <h2 class="text-4xl font-semibold text-center mb-4 text-lexara-dark-navy">Everything You Need for Client Intake</h2>
    <p class="text-center text-gray-600 mb-16 text-lg">
      Comprehensive features designed specifically for legal professionals
    </p>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 max-w-6xl mx-auto">
      {features.map((feature) => (
        <div class="bg-lexara-white-smoke rounded-2xl p-8 relative">
          <div class="w-14 h-14 bg-lexara-dark-navy rounded-lg flex items-center justify-center mb-6">
            {feature.icon === 'chart' && (
              <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
              </svg>
            )}
            {feature.icon === 'tag' && (
              <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z" />
              </svg>
            )}
            {feature.icon === 'support' && (
              <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192l-3.536 3.536M21 12a9 9 0 11-18 0 9 9 0 0118 0zm-5 0a4 4 0 11-8 0 4 4 0 018 0z" />
              </svg>
            )}
            {feature.icon === 'mobile' && (
              <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z" />
              </svg>
            )}
            {feature.icon === 'security' && (
              <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
              </svg>
            )}
            {feature.icon === 'api' && (
              <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4" />
              </svg>
            )}
          </div>
          <h3 class="text-xl font-semibold text-lexara-dark-navy mb-3">{feature.title}</h3>
          <p class="text-gray-600 leading-relaxed">{feature.description}</p>
          {feature.comingSoon && (
            <div class="absolute top-6 right-6">
              <Badge variant="default">
                Coming Soon
              </Badge>
            </div>
          )}
        </div>
      ))}
    </div>
  </div>
</section>